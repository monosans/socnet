[report]
exclude_lines =
  ^\s*@(?:abc\.)?abstractmethod$
  ^\s*if\s+(?:settings\.)?DEBUG\s*:$
fail_under = 50

[run]
omit =
  .venv/*
  node_modules/*
  config/asgi.py
  config/settings/local.py
  config/settings/production.py
  socnet_rs/target/**/*.txt
  manage.py
  server.py
plugins =
  covdefaults
  django_coverage_plugin
