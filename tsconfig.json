{
  "extends": "@tsconfig/strictest",
  "exclude": ["socnet/static/public/js/"],
  "compilerOptions": {
    "noUncheckedIndexedAccess": false,

    "module": "node16",

    "newLine": "lf",
    "noEmit": true,
    "removeComments": true,

    "allowSyntheticDefaultImports": false,

    "target": "es6",
    "useDefineForClassFields": true,
  },
}
