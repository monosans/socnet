{
  "scripts": {
    "lint": "eslint --fix .",
    "format": "prettier --write . '!**/*.html'"
  },
  "devDependencies": {
    "eslint": "^8.21",
    "eslint-config-prettier": "^8.5",
    "prettier": "^2.7"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "curly": "error",
      "eqeqeq": "error",
      "no-implicit-globals": [
        "error",
        {
          "lexicalBindings": true
        }
      ],
      "no-var": "error",
      "prefer-const": "error",
      "strict": [
        "error",
        "global"
      ]
    }
  }
}
