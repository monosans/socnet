{
  "name": "socnet",
  "private": true,
  "scripts": {
    "build": "npm run esbuild-base -- --minify {} +",
    "esbuild-base": "find ./socnet/static/private/css ./socnet/static/private/js -type f ! -name types.ts -exec esbuild --format=esm --outdir=./socnet/static/public/ --platform=browser --target=chrome63,edge79,safari11.1,firefox67,opera50",
    "watch": "npm run esbuild-base -- --watch=forever {} +"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@types/autosize": "4.0.1",
    "@types/luxon": "3.3.1",
    "@typescript-eslint/eslint-plugin": "6.2.1",
    "@typescript-eslint/parser": "6.2.1",
    "esbuild": "0.18.18",
    "eslint": "8.46.0",
    "eslint-config-prettier": "8.10.0",
    "prettier": "3.0.1",
    "prettier-plugin-packagejson": "2.4.5",
    "stylelint": "15.10.2",
    "stylelint-config-standard": "34.0.0",
    "typescript": "5.1.6",
    "viewerjs": "1.11.4"
  }
}
