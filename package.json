{
  "name": "socnet",
  "private": true,
  "scripts": {
    "eslint": "eslint --ext js,mjs --fix .",
    "format": "prettier --write . '!**/*.html'",
    "stylelint": "stylelint '**/*.css'"
  },
  "devDependencies": {
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "prettier": "2.8.8",
    "stylelint": "15.6.2",
    "stylelint-config-standard": "33.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:all",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "curly": "error",
      "func-style": [
        "error",
        "declaration"
      ],
      "id-length": "off",
      "init-declarations": "off",
      "max-lines-per-function": "off",
      "max-statements": "off",
      "new-cap": [
        "error",
        {
          "newIsCap": false
        }
      ],
      "no-magic-numbers": "off",
      "no-new": "off",
      "no-ternary": "off",
      "no-void": [
        "error",
        {
          "allowAsStatement": true
        }
      ],
      "one-var": [
        "error",
        "never"
      ],
      "radix": [
        "error",
        "as-needed"
      ],
      "sort-keys": [
        "error",
        "asc",
        {
          "allowLineSeparatedGroups": true
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
