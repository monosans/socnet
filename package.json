{
  "scripts": {
    "eslint": "eslint --fix .",
    "format": "prettier --write . '!**/*.html'",
    "stylelint": "stylelint '**/*.css'"
  },
  "devDependencies": {
    "eslint": "^8.33",
    "eslint-config-prettier": "^8.5",
    "prettier": "^2.8",
    "stylelint": "^14.16",
    "stylelint-config-prettier": "^9.0",
    "stylelint-config-standard": "^29.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "curly": "error",
      "eqeqeq": "error",
      "no-implicit-globals": [
        "error",
        {
          "lexicalBindings": true
        }
      ],
      "no-var": "error",
      "prefer-const": "error",
      "strict": [
        "error",
        "global"
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ]
  }
}
